<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Melon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/xiketic</item>
        <item name="colorPrimaryVariant">@color/flame</item>
        <item name="colorOnPrimary">@color/gold_crayola</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fogra_black</item>
        <item name="colorSecondaryVariant">@color/melon_white</item>
        <item name="colorOnSecondary">@color/banana_mania</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Text Theme -->
        <item name="android:textViewStyle">@style/Text</item>
    </style>
    <style name="CardView.Dark">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>
</resources>